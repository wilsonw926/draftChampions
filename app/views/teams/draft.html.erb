<body>
  <!-- SLIDER -->
  <section class="slider d-flex align-items-center">

  	<div class="nav-menu">
	    <div class="bg transition">
	      <div class="container-fluid fixed">
	        <div class="row">
	          <div class="col-md-12">
	              <div class="round">ROUND <%= @round %> OF 15 <br></div>

	            <nav class="navbar navbar-expand-lg navbar-light">
	                <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
	                    <div class="overall">TEAM OVERALL: <%= @team.overall_sum/@team.players_array.length %><br></div>
	                </div>
	            </nav>
	          </div>
	        </div>
	      </div>
	    </div>
	  </div>
	  <%= render '/layouts/header' %>

		<% @three_players.each do |player| %>

		<div class="container">
            <div class="row d-flex justify-content-center">
                    <div class="three_players">
                                <!--============================= FEATURED PLACES =============================-->
            
                    <div class="featured-place-wrap">
                        		<%= image_tag player.front_card.variant(resize: '300x300') %>
                        		<div class="bottom-icons">
                                <%= button_to "Draft Player", add_player_path(id: @team.id, round_number: @round, selected_player: player.id, player_overall: player.overall), class: "btn btn-danger" %>
                            </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="featured-btn-wrap">
                    </div>
                </div>
            </div>
            
    <!--//END FEATURED PLACES -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
		<% end %>
		<div class="teamarrow">
        <%= image_tag "downarrow.png" %><br>
        <div class="teamarrowtext">
        	<font color="white"><font size="7">CURRENT TEAM</font></font>
        </div>
    </div>
	</section>
</body>

